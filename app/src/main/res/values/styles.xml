<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--Reneh Styles-->
    <style name="roundedImageView">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">12dp</item>
    </style>

    <style name="CustomSeekBar" parent="Widget.AppCompat.SeekBar">
        <item name="android:progressDrawable">@drawable/custom_seekbar_progress</item>
        <item name="android:thumb">@drawable/custom_seekbar_thumb</item>
    </style>

    <style name="AppNameTextStyle">
        <!-- Add any other style attributes as needed -->
        <item name="android:fontFamily">@font/big_space</item>
        <item name="android:textSize">30sp</item>
        <item name="android:textStyle">bold</item>
        <!-- Add any other style attributes as needed -->
    </style>




    <!--Farah Styles-->
    <style name="AppTheme" parent="Theme.MaterialComponents.NoActionBar">
        <item name="android:windowShowWallpaper">true</item>
        <item name="android:windowBackground">@color/SplashColor</item>
        <item name="colorPrimaryDark">@color/FlatWhite</item>
        <item name="colorPrimary">@color/FlatWhite</item>
        <item name="colorAccent">@color/flatOrange</item>
        <item name="android:actionOverflowButtonStyle">@style/Widget.ActionButton.Overflow</item>
        <item name="colorControlHighlight">#66000000</item>
    </style>
    <style name="ToolbarColoredBackArrow" parent="AppTheme">
        <item name="android:textColorSecondary">@color/FlatWhite</item>
    </style>

    <style name="Widget.ActionButton.Overflow" parent="@android:style/Widget.Holo.ActionButton.Overflow">
        <item name="android:contentDescription">@string/accessibility_overflow</item>
    </style>
    <style name="MyImageButtonStyle" parent="Widget.AppCompat.ImageButton">
        <item name="android:background">@drawable/rounded_button_background</item>
        <item name="android:scaleType">fitXY</item>
    </style>
    <style name="YourCustomDialogTheme" parent="Theme.AppCompat.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowAnimationStyle">@style/YourPopupAnimation</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.6</item>
        <item name="android:layout">@layout/activity_create_playlist</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>


    <style name="YourPopupAnimation">
        <item name="android:windowEnterAnimation">@android:anim/slide_in_left</item>
        <item name="android:windowExitAnimation">@android:anim/slide_out_right</item>
    </style>
</resources>