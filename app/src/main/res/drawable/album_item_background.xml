<!-- res/drawable/album_item_background.xml -->

<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background with rounded corners -->
    <item
        android:width="152dp"
        android:height="152dp"
        android:gravity="center">
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF" /> <!-- Set your desired background color -->
            <corners android:radius="8dp" /> <!-- Set your desired corner radius -->
        </shape>
    </item>
</layer-list>

