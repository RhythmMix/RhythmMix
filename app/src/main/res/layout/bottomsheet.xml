<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    android:background="@drawable/forbottomsheet"
    >
    <ImageView
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:src="@drawable/baseline_remove_24"
android:scaleType="centerCrop"
        android:layout_gravity="center"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal"
        android:padding="10dp">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
android:text="All playlist"
android:textColor="@color/white"
        android:textSize="30dp"
        android:textAlignment="viewStart"
        android:layout_marginTop="19dp"
        android:textStyle="bold"

        />
    <ImageView
        android:id="@+id/cancel_button"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/baseline_cancel_24"
        android:scaleType="centerCrop"
        android:layout_marginLeft="170dp"
        android:layout_marginTop="14dp"
        android:layout_gravity="top|right"/>
    </LinearLayout>
    <View
        android:id="@+id/view3333"
        android:layout_width="wrap_content"
        android:layout_height="1dp"
    android:layout_marginTop="4dp"
        android:background="@color/white"
        />
    <!--    <TextView-->
    <!--        android:layout_width="wrap_content"-->
    <!--        android:layout_height="wrap_content"-->
    <!--        android:layout_gravity="center"-->
    <!--        android:layout_marginTop="10dp"-->
    <!--        android:background="@color/red"-->
    <!--        android:text="There is no playlist yet"-->
    <!--        android:textColor="@color/white"-->
    <!--        android:textSize="30dp" />-->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/forrecycle"
        android:layout_width="match_parent"
        android:layout_height="260dp"
        android:layout_marginLeft="10dp"
android:layout_gravity="left"

        tools:listitem="@layout/choose_playlist_item"
        />



    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end|bottom"

        android:backgroundTint="@color/flatOrange"
        android:src="@drawable/baseline_add_24"
        android:contentDescription="add a playlist"
        android:layout_margin="16dp" />



</LinearLayout>