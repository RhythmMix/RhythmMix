<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    tools:context=".fragment.PlaylistFragment">

    <ImageButton
        android:id="@+id/playlistImageButton"
        style="@style/MyImageButtonStyle"
        android:layout_width="160dp"
        android:layout_height="169dp"
        android:layout_marginTop="16dp"
        android:radius="50dp"
        android:scaleType="fitXY"
        android:src="@drawable/rhythemix" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginStart="16dp">
    </LinearLayout>

    <TextView
        android:id="@+id/playlistTitle"
        android:layout_marginTop="90dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/ios_bold"
        android:text="@string/playlist_fragment"
        android:textColor="@color/thisWhiteColor"
        android:textSize="25dp"
        android:textStyle="bold" />

</LinearLayout>
